{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "__mocks__/**/*.ts"
  ]
} 